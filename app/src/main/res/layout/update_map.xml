<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UpdateMap" >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6A5ACD">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_24"

            android:background="?android:attr/selectableItemBackground"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="8dp" />

        <ImageView
            android:id="@+id/title1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="125dp"
            android:src="@drawable/crss"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CarShare"
            android:fontFamily="cursive"
            android:layout_marginTop="6dp"
            android:layout_marginStart="165dp"
            android:textSize="22sp"
            android:textColor="@android:color/white"
            />

    </RelativeLayout>
    <fragment
        android:id="@+id/map_fragment1"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.95"/>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.05">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remove"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/removeonemarker"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="33dp"
                    android:text="one marker"
                    android:textSize="12sp"
                    app:backgroundTint="#ff0000"
                    app:cornerRadius="20dp"
                    />
                <com.google.android.material.button.MaterialButton

                    android:id="@+id/removetwomarker"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="33dp"
                    app:backgroundTint="#ff0000"
                    app:cornerRadius="20dp"
                    android:text="Two markers"
                    android:textSize="12sp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:background="@android:color/darker_gray" />
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <com.google.android.material.button.MaterialButton

                android:id="@+id/cancel"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="33dp"
                app:cornerRadius="20dp"
                android:text="Cancel"
                />
            <com.google.android.material.button.MaterialButton

                android:id="@+id/apply"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="33dp"
                app:cornerRadius="20dp"
                android:text="Apply"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>